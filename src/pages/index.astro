  <SectionContainer id="home" class="py-16 md:py-36">
    <Hero/>
  </SectionContainer>
  <SectionContainer id="markets">
    <Markets/>
  </SectionContainer>
  <Services />
  <Banner/>
  <SectionContainer id="plans">
    <Plans/>
  </SectionContainer>
</main>
</Layout>