---
import RightArrow from "@/assets/icons/right-arrow.astro";

const PACKS = {
  BASICO: {
    name: "BÃ¡sico",
    class: "bg-gradient-to-r from-orange-400 to-red-500",
  },
  PREMIUM: {
    name: "Premium",
    class: "bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500",
  },
  EXPERT: {
    name: "Expert+",
    class:
      "bg-gradient-to-r from-indigo-500 from-10% via-sky-500 via-30% to-emerald-500 to-90%",
  },
};

const PLANS = [
  {
    title: "Pago mensual",
    price: 30,
    description: "Prueba nuestra plataforma. Cancela cuando quieras",
    packs: [PACKS.BASICO],
  },
  {
    title: "Pago mensual",
    price: 99,
    description: "Prueba nuestra plataforma. Cancela cuando quieras",
    packs: [PACKS.PREMIUM],
  },
  {
    title: "Pago mensual",
    price: 150,
    description: "Prueba nuestra plataforma. Cancela cuando quieras",
    packs: [PACKS.EXPERT],
  },
];
---

<section class="w-full min-w-80 pb-10">
  <div class="text-center pb-14 px-4">
    <h2 class="font-bold text-2xl pt-14">
      Escoge el plan que mejor se ajuste a ti.
    </h2>
    <p class="font-semibold pt-8">
      Cualquier plan te da acceso completo a nuestra plataforma
    </p>
  </div>
  <section
    class="flex lg:justify-center h-80 overflow-x-auto snap-proximity lg:overflow-x-hidden lg:space-x-8 space-x-4 px-4 overscroll-x-contain pb-5"
  >
    {
      PLANS.map(({ title, price, description, packs }) => (
        <article class=" min-w-48 max-w-72 relative rounded-xl bg-just-white mt-14 shadow-md hover:-translate-y-4 transition-all ">
          {packs.map((pack) => (
            <span
              class={`text-just-white absolute p-2 w-32 ${pack.class} rounded-lg text-center -top-4 left-[calc(50%-60px)]`}
            >
              {pack.name}
            </span>
          ))}
          <div class=" text-center p-2">
            <h3 class=" pt-8 font-medium">{title}</h3>
            <p class=" text-6xl font-bold">
              <sup class=" text-lg align-super">$</sup>
              {price}
            </p>
            <p class=" text-sm text-gray">{description}</p>
            <button class=" rounded w-36 h-11 bg-soft-blue mt-5 border-2 border-orange-500">
              <a href="#" class="flex justify-center items-center">
                Escoge este
                <RightArrow />
              </a>
            </button>
          </div>
        </article>
      ))
    }
  </section>
</section>
<style>
  .card:hover,
  .card:focus {
    padding: 16px;
    border-radius: 5px;
    border: 2px solid #0000;
    background:
      linear-gradient(black, #222) padding-box,
      linear-gradient(#fd8f0b, #1a9af7) border-box;
  }
</style>
